@model CompetenceCreateViewModel

@{
    ViewBag.title = "Ajouter une competence";
}

<div class="row">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-10">
        <div class="card">
            <div class="card-header">
                <h5>Ajouter une Competence</h5>
            </div>
            <div class="card-block">
                <form asp-action="Create" asp-controller="Competence" method="post">
                    <div class="form-row">
                        <div class="col-md-12 mb-3 custom-file">
                            <label asp-for="libelle"></label>
                            <input asp-for="libelle" class="form-control" />
                        </div>
                        <span asp-validation-for="libelle" class="text-sm-left text-danger"></span>
                    </div><hr />
                    <div>
                        <button class="btn-sm btn-primary" type="submit">Ajouter Competence</button>
                        <a asp-controller="Competence" asp-action="Index" class="btn-sm btn-dark">Retour</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="col-sm-1">
    </div>
</div>