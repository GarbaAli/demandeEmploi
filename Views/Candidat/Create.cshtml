@model CandidatCreateViewModel

@{
    ViewBag.Title = "Ajouter candidats";
    ViewBag.Header = "Candidatures";
}
<div class="row">
    <div class="col-sm-1">
    </div>
    <div class="col-sm-10">
        <div class="card">
            <div class="card-header">
                <h5>Ajouter un Nouveau Candidat</h5>
            </div>
            <div class="card-block">
                <form enctype="multipart/form-data" asp-action="Create" asp-controller="Candidat" method="post">
                    <div class="form-row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Nom"></label>
                            <input type="text" class="form-control" asp-for="Nom">
                           <span class="text-sm-left text-danger" asp-validation-for="Nom"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Prenom"></label>
                            <input type="text" class="form-control" asp-for="Prenom">
                           <span class="text-sm-left text-danger" asp-validation-for="Prenom"></span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12 mb-3">
                            <label asp-for="profession"></label>
                            <input class="form-control" asp-for="profession">
                           <span class="text-sm-left text-danger" asp-validation-for="profession"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="Phone"></label>
                            <input class="form-control" asp-for="Phone">
                           <span class="text-sm-left text-danger" asp-validation-for="Phone"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="DteNaissance"></label>
                            <input class="form-control" asp-for="DteNaissance">
                           <span class="text-sm-left text-danger" asp-validation-for="DteNaissance"></span>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label asp-for="Age"></label>
                            <input class="form-control" asp-for="Age">
                           <span class="text-sm-left text-danger" asp-validation-for="Age"></span>
                        </div>
                        <div class="col-md-2 mb-3">
                            <label asp-for="Experience"></label>
                            <input class="form-control" asp-for="Experience">
                           <span class="text-sm-left text-danger" asp-validation-for="Experience"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="sexe"></label>
                            <select class="form-control" asp-for="sexe">
                                <option accesskey="Masculin">Masculin</option>
                                <option accesskey="Feminin">Feminin</option>
                            </select>
                           <span class="text-sm-left text-danger" asp-validation-for="sexe"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="statutFamilial"></label>
                            <select class="form-control" asp-for="statutFamilial">
                                <option accesskey="Celibataire">Celibataire</option>
                                <option accesskey="Marié">Marié</option>
                                <option accesskey="Divorcer">Divorcer</option>
                                <option accesskey="Couple">En Couple</option>
                            </select>
                           <span class="text-sm-left text-danger" asp-validation-for="sexe"></span>
                        </div>
                        <div class="col-md-4 mb-3">
                            <label asp-for="service"></label>
                            <select class="form-control" asp-for="service" asp-items="Html.GetEnumSelectList<service>()">
                                @*<option accesskey="Informatique">Informatique</option>
                                <option accesskey="RH">Ressource Humaine</option>
                                <option accesskey="Comptabilite">Comptabilite</option>
                                <option accesskey="Marketing">Marketing</option>*@
                            </select>
                           <span class="text-sm-left text-danger" asp-validation-for="sexe"></span>
                        </div>

                        @*<div class="col-md-12 mb-3 custom-file">
            <input asp-for="avatar" type="file" accept="images/*" class="custom-file-input" id="avatarinput">
            <label class="custom-file-label" for="validatedInputGroupCustomFile">Charger votre avatar...</label>
        </div>*@
                    </div>
                    <hr />

                    <button class="btn btn-primary" type="submit">Nouveau Candidat</button>
                </form>
            </div>
        </div>
    </div>
   
    <div class="col-sm-1">
    </div>
</div>



